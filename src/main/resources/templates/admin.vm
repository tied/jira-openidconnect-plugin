<html>
<head>
    <title>OAuth admin form</title>
    <meta name="decorator" content="atl.admin">
    $webResourceManager.requireResource("com.atlassian.tutorial.oauth-plugin:oauth-plugin-resources")
</head>
<body>
<form id="admin" class="aui left-label">
    <div class="form-body">
        <div class="field-group">
            <label for="name">Domain</label>
            <input type="text" id="domain" name="domain" required class="text">
        </div>
        <div class="field-group">
            <label for="time">Client Id</label>
            <input type="text" id="client-id" name="client-id" required class="text">
        </div>
        <div class="field-group">
            <label for="time">Client Secret</label>
            <input type="text" id="client-secret" name="client-secret" required class="text">
        </div>
        <div class="form-footer">
            <div class="buttons-container">
                <div class="buttons">
                    <input type="submit" value="Save" class="aui-button">
                </div>
            </div>
        </div>
    </div>
</form>
</body>
</html>
